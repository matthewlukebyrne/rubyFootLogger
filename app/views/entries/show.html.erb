<%= content_for :title do %>
<!-- Update dyanmic entries with date time - now_to_s = toString() in Ruby -->
<%= @entry.time_of_day %> &ndash; <%= DateTime.now.to_s(:nice_date) %>
<% end %>

        <div class="columns mt-6 is centered">
          <div class="column is-one-third">
            <nav class="panel is-danger">
              <p class="panel-heading">
                Time of day:
                <%= @entry.time_of_day %>
              </p>

              <div class="panel-block">
                Steps: <%= @entry.steps %>
              </div>

              <div class="panel-block">
                Time: <%= @entry.time %>
              </div>

              <div class="panel-block">
                Miles: <%= @entry.miles %>
              </div>

              <div class="panel-block">
                Calories: <%= @entry.calories %>
              </div>
            </nav>

            <div class="columns is-mobile">
              <div class="column">
                <%= link_to 'Edit' , edit_entry_path(@entry), class: "button is-gray" %>
                <!-- Finds and paths to destroy in the controller / Also uses a JS library inbuilt for confirmation -->
                <!-- Rails ships woth a library valled UI js (Not working wonder why) -->
                <%= link_to 'Delete', entry_path(@entry), method: :delete, data: { confirm: "Are you sure?" }, class: "button is-gray" %>
              </div>
              <div class="column">
                  <!--  -->
              </div>
            </div>
          </div>
        </div>