<%= form_with(model: entry) do |form| %>
  <% if entry.errors.any? %>
    <div id="message is-danger">
      <div class="message-header">
        <!-- Takes a count and counts what is in the arrays of errors 1 errors, 2 errors, etc -->
        <p><%= pluralize(entry.errors.count, "error") %> prohibited this entry from being saved:</p>
      </div>
        <!-- Main Body -->
      <div class="message-body">
      <ul>
        <% entry.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
      </div>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :time_of_day, class: "label" %>
    <%= form.text_field :time_of_day, class: "input" %>
  </div>

  <div class="field">
    <%= form.label :steps, class: "label" %>
    <%= form.number_field :steps, class: "input" %>
  </div>

  <div class="field">
    <%= form.label :time, class: "label" %>
    <%= form.text_field :time, class: "input" %>
  </div>

  <div class="field">
    <%= form.label :miles, class: "label" %>
    <%= form.number_field :miles, class: "input" %>
  </div>

  <div class="field">
    <%= form.label :calories, class: "label" %>
    <%= form.number_field :calories, class: "input" %>
  </div>

  <div class="actions">
    <%= form.submit class: "button is-success" %>
  </div>
<% end %>
